{{#dropdown}}
<li class="dropdown">
	<a href="{{href}}" class="dropdown-toggle" data-toggle="dropdown">
		{{text}}
		<b class="caret"></b>
	</a>
	<ul class="dropdown-menu">
	{{#dropdown-items}}
		<a href="{{href}}" {{#data}}data-{{field}}="{{value}}" {{/data}}>
			{{#icon}}<i class="icon-{{icon}}"></i>{{/icon}}&nbsp;{{text}}
		</a>
	{{/dropdown-items}}
	</ul>
</li>
{{/dropdown}}